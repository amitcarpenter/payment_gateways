<!DOCTYPE html>
<html>
  <head>
    <title>Payment Gateways</title>
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://js.stripe.com/v3/"></script>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center mb-4">Payment Gateways</h1>
      <div class="row">
        <div class="col-md-8">
          <div class="tab-content">
            <div class="tab-pane fade show active" id="stripe" role="tabpanel">
              <div class="card mb-4">
                <div class="card-header">
                  <h2 class="h4">Stripe Payment</h2>
                </div>
                <%- include('stripe.ejs') %>
              </div>
            </div>
            <div class="tab-pane fade" id="razorpay" role="tabpanel">
              <div class="card mb-4">
                <div class="card-header">
                  <h2 class="h4">Razorpay Payment</h2>
                </div>
                <%- include('razorpay.ejs') %>
              </div>
            </div>
            <div class="tab-pane fade" id="paypal" role="tabpanel">
              <div class="card mb-4">
                <div class="card-header">
                  <h2 class="h4">PayPal Payment</h2>
                </div>
                <%- include('paypal.ejs') %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <!-- Nav tabs -->
          <ul class="nav flex-column nav-pills">
            <li class="nav-item">
              <a
                class="nav-link active"
                data-toggle="tab"
                href="#stripe"
                role="tab"
                onclick="showPaymentForm('stripe')"
              >
                Stripe
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                data-toggle="tab"
                href="#razorpay"
                role="tab"
                onclick="showPaymentForm('razorpay')"
              >
                Razorpay
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                data-toggle="tab"
                href="#paypal"
                role="tab"
                onclick="showPaymentForm('paypal')"
              >
                PayPal
              </a>
            </li>
          </ul>
        </div>
      </div>
      <div id="payment-result"></div>
    </div>

    <!-- Show hide Tabs -->
    <script>
      function showPaymentForm(paymentMethod) {
        const tabPanes = document.querySelectorAll(".tab-pane");
        const navLinks = document.querySelectorAll(".nav-link");

        tabPanes.forEach((pane) => {
          pane.classList.remove("show", "active");
        });

        navLinks.forEach((link) => {
          link.classList.remove("active");
        });

        const selectedTabPane = document.getElementById(paymentMethod);
        const selectedNavLink = document.querySelector(
          `a[href="#${paymentMethod}"]`
        );

        selectedTabPane.classList.add("show", "active");
        selectedNavLink.classList.add("active");
      }
    </script>
  </body>
</html>
